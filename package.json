{
  "name": "simple-desktop-images",
  "version": "1.0.0",
  "description": "Image scraper for simple desktops",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/barrythepenguin/simple-desktop-images.git"
  },
  "author": "Jonathan Haines",
  "scripts": {
    "start": "node src/index.ts",
    "test": "xo && c8 ava",
    "test:watch": "ava --watch"
  },
  "dependencies": {
    "cheerio": "^1.1.0",
    "domhandler": "^5.0.3",
    "got": "^14.4.7"
  },
  "devDependencies": {
    "@tsconfig/node-ts": "^23.6.1",
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@tsconfig/node24": "^24.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^24.0.3",
    "@types/sinon": "^17.0.4",
    "ava": "^6.4.0",
    "c8": "^10.1.3",
    "nock": "^14.0.5",
    "prettier": "^3.6.1",
    "prettier-plugin-package": "^1.4.0",
    "sinon": "^21.0.0",
    "typescript": "^5.8.3",
    "xo": "^1.1.1"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "nodeArguments": [
      "--experimental-strip-types",
      "--experimental-vm-modules",
      "--disable-warning=ExperimentalWarning"
    ]
  },
  "c8": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/test/**"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "check-coverage": true,
    "branches": 80,
    "functions": 100,
    "lines": 100,
    "statements": 100
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "singleQuote": true,
    "useTabs": true,
    "trailingComma": "all"
  },
  "xo": {
    "prettier": "compat"
  }
}