{
  "name": "simple-desktop-images",
  "version": "1.0.0",
  "description": "Image scraper for simple desktops",
  "scripts": {
    "prestart": "babel src --out-dir lib",
    "start": "node lib/index.js",
    "flow": "flow",
    "test": "xo && flow && nyc ava",
    "test:watch": "ava --watch",
    "coverage": "nyc report > coverage.lcov && codecov"
  },
  "author": "Jonathan Haines",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/barrythepenguin/simple-desktop-images.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ava": "^2.0.0",
    "babel-eslint": "^9.0.0",
    "codecov": "^3.1.0",
    "flow-bin": "^0.80.0",
    "moxios": "^0.4.0",
    "nyc": "^13.0.1",
    "xo": "^0.23.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "cheerio": "^1.0.0-rc.2",
    "rxjs": "^6.3.2"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-flow",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text-lcov"
    ]
  },
  "xo": {
    "prettier": true,
    "parser": "babel-eslint",
    "envs": [
      "node"
    ],
    "ignores": [
      "flow-typed/**"
    ]
  }
}
