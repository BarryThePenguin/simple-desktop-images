{
  "name": "simple-desktop-images",
  "version": "1.0.0",
  "description": "Image scraper for simple desktops",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/barrythepenguin/simple-desktop-images.git"
  },
  "author": "Jonathan Haines",
  "scripts": {
    "build": "del-cli dist && tsc",
    "prestart": "npm run build",
    "pretest": "npm run build",
    "start": "node dist/src/index.js",
    "test": "xo && tsc --noEmit && c8 ava",
    "test:watch": "ava --watch"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.10",
    "got": "^12.1.0"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/node": "^18.6.4",
    "ava": "^4.3.1",
    "c8": "^7.12.0",
    "codecov": "^3.8.3",
    "del-cli": "^5.0.0",
    "nock": "^13.2.9",
    "prettier": "^2.7.1",
    "prettier-plugin-package": "^1.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "xo": "^0.51.0"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "test/": "dist/test/"
      },
      "compile": false
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "singleQuote": true,
    "useTabs": true,
    "trailingComma": "all"
  },
  "xo": {
    "prettier": true,
    "envs": [
      "node"
    ]
  }
}
