{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2018"],
		"module": "commonjs",
		"moduleResolution": "node",
		"newLine": "lf",
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "lib",
		"pretty": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"stripInternal": true,
		"target": "es2018",
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		 "**/*.ts",
	]
}
